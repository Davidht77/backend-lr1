FROM python:3.11-slim

# Instalar Graphviz como dependencia del sistema
RUN apt-get update && \
    apt-get install -y --no-install-recommends graphviz && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Establecer directorio de trabajo
WORKDIR /app

# Copiar archivos de requirements primero (para cache de Docker)
COPY requirements_api.txt ./

# Instalar dependencias de Python
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements_api.txt

# Copiar el c칩digo de la aplicaci칩n
COPY . .

# Variable de entorno para el puerto (Railway lo configura autom치ticamente)
ENV PORT=8000

# Exponer el puerto
EXPOSE 8000

# Comando para ejecutar la aplicaci칩n
CMD uvicorn main:app --host 0.0.0.0 --port ${PORT}
